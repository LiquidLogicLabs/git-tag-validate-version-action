{
  "name": "tag-validate-version-action",
  "version": "1.0.5",
  "description": "GitHub Action to validate and parse git tags into structured version information",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "husky install",
    "build": "tsc && ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package": "npm run build",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns='integration|e2e'",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e --testTimeout=30000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:act": "act workflow_dispatch -W .github/workflows/test.yml",
    "test:act:verbose": "act workflow_dispatch -W .github/workflows/test.yml -v",
    "test:act:list": "act -l",
    "test:act:ci": "act -W .github/workflows/ci.yml",
    "test:act:release": "act push --eventpath .github/workflows/.act/event-release.json",
    "lint:act": "act -W .github/workflows/ci.yml -j lint",
    "lint": "eslint src/**/*.ts --no-warn-ignored",
    "format": "prettier --write \"src/**/*.ts\"",
    "release:patch": "standard-version --release-as patch --skip.changelog && git push --follow-tags",
    "release:minor": "standard-version --release-as minor --skip.changelog && git push --follow-tags",
    "release:major": "standard-version --release-as major --skip.changelog && git push --follow-tags"
  },
  "keywords": [
    "github-action",
    "git",
    "tag",
    "version",
    "semver",
    "parser"
  ],
  "author": "LiquidLogicLabs",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.7",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "husky": "^9.1.7",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.9.3"
  }
}
